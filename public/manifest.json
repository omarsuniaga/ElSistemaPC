{
  "name": "Academia de Música Manager",
  "short_name": "Acad Música",
  "description": "Sistema integral de gestión para academias de música: asistencia, estudiantes, clases y reportes.",
  "version": "1.1.0",
  "start_url": "/?source=pwa",
  "scope": "/",
  "id": "music-academy-app-v1",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#ffffff",
  "theme_color": "#1a202c",
  "orientation": "any",
  "categories": ["education", "productivity", "utilities"],
  "lang": "es",
  "dir": "ltr",
  "prefer_related_applications": false,
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 480
  },
  "handle_links": "preferred",
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"]
      },
      "name": "Importar Datos CSV"
    }
  ],
  "icons": [
    {
      "src": "vite.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/mobile-1.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "platform": "narrow",
      "label": "Pantalla de asistencia en la Academia de Música"
    },
    {
      "src": "screenshots/desktop-1.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "platform": "wide",
      "label": "Panel de control de la Academia de Música"
    }
  ],
  "shortcuts": [
    {
      "name": "Registrar Asistencia",
      "short_name": "Asistencia",
      "description": "Ir directamente a la página de registro de asistencia",
      "url": "/attendance"
    },
    {
      "name": "Ver Estudiantes",
      "short_name": "Estudiantes",
      "description": "Ver lista de estudiantes",
      "url": "/students"
    }
  ]
}
