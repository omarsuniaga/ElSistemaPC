{
  "name": "music-academy-manager",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "dev:clean": "npm run clean-processes && npm run dev",
    "clean-processes": "powershell -ExecutionPolicy Bypass -File scripts/fix-websocket.ps1",
    "build": "vite build",
    "build:with-migrate": "npm run migrate:schedules && vite build",
    "build:prod": "cross-env NODE_ENV=production vite build",
    "build:analyze": "npm run build && npm run analyze:bundle",
    "validate:env": "node scripts/validate-env.js",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/**/*.test.ts",
    "test:montaje": "vitest run --config vitest.config.montaje.ts",
    "test:montaje:watch": "vitest --config vitest.config.montaje.ts",
    "test:montaje:coverage": "vitest run --config vitest.config.montaje.ts --coverage",
    "test:montaje:ui": "vitest --config vitest.config.montaje.ts --ui",
    "test:montaje:script": "powershell -ExecutionPolicy Bypass -File test-montaje.ps1",
    "migrate:schedules": "tsx src/utils/cli/migrate.ts",
    "analyze:bundle": "tsx scripts/analyze-bundle.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.vue --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx,.vue --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,vue,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,vue,json,md}\" --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit",
    "spell-check": "cspell \"src/**/*.{ts,vue,js}\" \"*.md\"",
    "validate": "npm run lint && npm run format:check && npm run type-check",
    "predeploy": "npm run migrate:schedules",
    "deploy": "npm run build && firebase deploy",
    "setup-permissions": "tsx scripts/setup-permissions.ts",
    "validate-permissions": "tsx scripts/validate-permissions.ts",
    "test-permissions": "tsx scripts/test-permissions.ts",
    "fix-imports": "node scripts/safe-import-analyzer.js",
    "fix-imports:quick": "node scripts/quick-import-fix.js",
    "fix-imports:advanced": "node scripts/advanced-import-resolver.js",
    "fix-imports:full": "node scripts/fix-import-conflicts.js",
    "fix-imports:analyze": "node scripts/safe-import-analyzer.js",
    "fix-imports:windows": "powershell -ExecutionPolicy Bypass -File scripts/fix-imports.ps1",
    "backup:alumnos": "node scripts/backup-alumnos.js",
    "backup:list": "node -e \"import('./scripts/backup-alumnos.js').then(m => m.listAvailableBackups())\"",
    "analyze:alumnos": "node scripts/analyze-alumnos-collection.js",
    "migrate:safe-process": "node scripts/safe-migration-process.js",
    "migrate:analyze-csv": "node scripts/analyze-csv-data.js",
    "migrate:students-csv": "node scripts/migrate-students-from-csv.js"
  },
  "dependencies": {
    "@firebasegen/default-connector": "file:dataconnect-generated/js/default-connector",
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.1.1",
    "@vuepic/vue-datepicker": "^7.4.0",
    "@vueuse/components": "^10.7.2",
    "@vueuse/core": "^10.11.1",
    "@vueuse/integrations": "^10.7.2",
    "@vueuse/shared": "^10.7.2",
    "abcjs": "^6.3.0",
    "axios": "^1.6.7",
    "chart.js": "^4.4.8",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "dompurify": "^3.2.4",
    "dotenv": "^16.5.0",
    "exceljs": "^4.4.0",
    "firebase": "^11.9.1",
    "firebase-admin": "^13.2.0",
    "html2pdf.js": "^0.10.3",
    "idb": "^8.0.2",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lodash-es": "^4.17.21",
    "node-fetch": "^3.3.2",
    "papaparse": "^5.4.1",
    "pinia": "^3.0.0",
    "pinia-plugin-persistedstate": "^4.3.0",
    "sortablejs": "^1.15.2",
    "tone": "^14.7.77",
    "vue": "^3.4.38",
    "vue-advanced-cropper": "^2.8.8",
    "vue-chartjs": "^5.3.2",
    "vue-draggable-plus": "^0.3.5",
    "vue-router": "^4.2.5",
    "vue-toast-notification": "^3.1.3",
    "vue-touch": "^2.0.0-beta.4",
    "vue-virtual-scroller": "^2.0.0-beta.8",
    "vue3-perfect-scrollbar": "^2.0.0",
    "vuedraggable": "^4.1.0",
    "workbox-window": "^7.0.0",
    "xlsx": "^0.18.5",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/papaparse": "^5.3.14",
    "@types/sortablejs": "^1.15.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^3.0.9",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "cspell": "^9.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "eslint-plugin-vue": "^9.20.1",
    "glob": "^11.0.3",
    "happy-dom": "^12.10.3",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.3",
    "sass-embedded": "^1.89.2",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.2.2",
    "vite": "^6.2.3",
    "vite-plugin-pwa": "^0.21.2",
    "vite-plugin-vuetify": "^2.1.1",
    "vitest": "^3.0.9",
    "vue-tsc": "^2.2.8"
  }
}
