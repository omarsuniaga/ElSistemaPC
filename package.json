{
  "name": "music-academy-manager",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "dev:clean": "npm run clean-processes && npm run dev",
    "clean-processes": "powershell -ExecutionPolicy Bypass -File scripts/fix-websocket.ps1",
    "build": "vite build",
    "build:with-migrate": "npm run migrate:schedules && vite build",
    "build:prod": "cross-env NODE_ENV=production vite build",
    "build:analyze": "npm run build && npm run analyze:bundle",
    "validate:env": "node scripts/validate-env.js",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/**/*.test.ts",
    "migrate:schedules": "tsx src/utils/cli/migrate.ts",
    "analyze:bundle": "tsx scripts/analyze-bundle.ts",
    "lint": "eslint src --ext .ts,.vue --fix",
    "lint:check": "eslint src --ext .ts,.vue",
    "type-check": "vue-tsc --noEmit",
    "predeploy": "npm run migrate:schedules",
    "deploy": "npm run build && firebase deploy",
    "setup-permissions": "tsx scripts/setup-permissions.ts",
    "validate-permissions": "tsx scripts/validate-permissions.ts",
    "test-permissions": "tsx scripts/test-permissions.ts"
  },
  "dependencies": {
    "@firebasegen/default-connector": "file:dataconnect-generated/js/default-connector",
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.1.1",
    "@vuepic/vue-datepicker": "^7.4.0",
    "@vueuse/components": "^10.7.2",
    "@vueuse/core": "^10.11.1",
    "@vueuse/integrations": "^10.7.2",
    "@vueuse/shared": "^10.7.2",
    "abcjs": "^6.3.0",
    "axios": "^1.6.7",
    "chart.js": "^4.4.8",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "dompurify": "^3.2.4",
    "dotenv": "^16.5.0",
    "exceljs": "^4.4.0",
    "firebase": "^11.9.1",
    "firebase-admin": "^13.2.0",
    "html2pdf.js": "^0.10.3",
    "idb": "^8.0.2",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lodash-es": "^4.17.21",
    "node-fetch": "^3.3.2",
    "papaparse": "^5.4.1",
    "pinia": "^2.1.7",
    "sortablejs": "^1.15.2",
    "tone": "^14.7.77",
    "vue": "^3.4.38",
    "vue-advanced-cropper": "^2.8.8",
    "vue-chartjs": "^5.3.2",
    "vue-draggable-plus": "^0.3.5",
    "vue-router": "^4.2.5",
    "vue-toast-notification": "^3.1.3",
    "vue-touch": "^2.0.0-beta.4",
    "vue-virtual-scroller": "^2.0.0-beta.8",
    "vue3-perfect-scrollbar": "^2.0.0",
    "vuedraggable": "^4.1.0",
    "workbox-window": "^7.0.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/papaparse": "^5.3.14",
    "@types/sortablejs": "^1.15.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-vue": "^5.1.3",
    "@vitest/coverage-v8": "^3.0.9",
    "@vue/test-utils": "^2.4.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.20.1",
    "happy-dom": "^12.10.3",
    "postcss": "^8.5.3",
    "sass": "^1.85.1",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.2.2",
    "vite": "^6.2.3",
    "vite-plugin-pwa": "^0.21.2",
    "vitest": "^3.0.9",
    "vue-tsc": "^2.2.8"
  }
}
